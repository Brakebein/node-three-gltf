{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "sourceMap": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "lib": [
      "es2018"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
